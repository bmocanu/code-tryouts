<project name="iq_p2">
    <import file="ant_base.xml"/>

    <target name="prepare" depends="base.prepare">
        <mkdir dir="${basedir}/bin/iq_p2"/>
    </target>

    <target name="build" depends="prepare">
        <javac srcdir="src" destdir="${basedir}/bin/iq_p2">
            <include name="${src}/java/ro/bmocanu/javapuzzles/iq/p2/Probl2_Agent.java"/>
            <include name="${src}/java/ro/bmocanu/javapuzzles/iq/p2/BrilliantClassAgentV1.java"/>
            <include name="${src}/java/ro/bmocanu/javapuzzles/iq/p2/BrilliantClassAgentV2.java"/>
        </javac>
        <jar basedir="${basedir}/bin/iq_p2" destfile="${basedir}/bin/iq_p2/probl2.jar">
            <manifest>
                <attribute name="Premain-Class" value="ro.bmocanu.javapuzzles.iq.p2.Probl2_Agent"/>
                <attribute name="Can-Redefine-Classes" value="true"/>
            </manifest>
        </jar>
    </target>
</project>