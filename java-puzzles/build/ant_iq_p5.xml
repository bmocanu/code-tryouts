<project name="iq_p5">
    <import file="ant_base.xml"/>

    <property name="src_java" value="${src}/java"/>
    <property name="src_c" value="${src}/c"/>
    <property name="iq_p5" value="ro/bmocanu/javapuzzles/iq/p5"/>

    <target name="prepare" depends="base.prepare">
        <mkdir dir="${bin}/iq_p5"/>
        <mkdir dir="${bin}/iq_p5/java"/>
        <mkdir dir="${bin}/iq_p5/c"/>
    </target>

    <target name="build" depends="prepare">
        <echo message="${src_java}"/>
        <javac srcdir="${src_java}" destdir="${bin}/iq_p5/java">
            <include name="${iq_p5}/**"/>
        </javac>
        <javah class="ro.bmocanu.javapuzzles.iq.p5.Main" classpath="${bin}/iq_p5/java" outputfile="${bin}/iq_p5/c/Main.h"/>
        <copy file="${src_c}/iq_p5/x64/Debug/IqP5.dll" todir="${bin}/iq_p5/java"/>
        <exec dir="${bin}/iq_p5/java" executable="java">
            <arg value="ro.bmocanu.javapuzzles.iq.p5.Main"/>
        </exec>
    </target>
</project>